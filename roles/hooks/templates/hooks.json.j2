[
  {
    "id": "github",
    "execute-command": "{{ hook_command_path }}",
    "trigger-rule":
    {
      "and":
      [
        {
          "match":
          {
            "type": "value",
            "value": "refs/heads/master",
            "parameter":
            {
              "source": "payload",
              "name": "ref"
            }
          }
        },
        {
          "match":
          {
            "type": "payload-hash-sha1",
            "secret": "{{ github_secret }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  }
]
